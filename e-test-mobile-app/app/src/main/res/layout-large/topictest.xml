<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/subjectbg">

            <TextView
                android:id="@+id/tvhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Economics"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="40dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvpq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="75dp"
            android:text="Topic Tests"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#F7921E"
            android:textSize="30dp" />

        <Button
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/testselect"
            android:gravity="center"
            android:text="INSTRUCTIONS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#9E9E9E"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btntestmix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="165dp"
            android:background="#F8C561"
            android:text="TEST MIX"
            android:textColor="#fff"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnyrone"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginLeft="25dp"
                android:text="1993"
                android:textColor="#fff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnyrtwo"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginLeft="5dp"
                android:text="1994"
                android:textColor="#fff"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btnyrthree"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginLeft="5dp"
                android:text="1995"
                android:textColor="#fff"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnyrfour"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="1997"
                android:textColor="#fff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnyrfive"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="1998"
                android:textColor="#fff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnyrsix"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="1999"
                android:textColor="#fff"
                android:textSize="30dp" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>