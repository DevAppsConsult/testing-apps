<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profpic" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="Name :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_below="@+id/tvname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/imageView"

            android:text="Gender :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tvGender"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvGenderOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvUsername"
            android:layout_alignStart="@+id/tvUsername"
            android:layout_alignTop="@+id/tvGender"
            android:layout_marginTop="2dp"
            android:text="Male / Female"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/tvLogins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="etest logins :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvNumloigins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNumtesttaken"
            android:layout_alignStart="@+id/tvNumtesttaken"
            android:layout_alignTop="@+id/tvLogins"
            android:text="234"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTesttaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvLogins"
            android:layout_alignStart="@+id/tvLogins"
            android:layout_below="@+id/tvLogins"
            android:layout_marginTop="10dp"
            android:text="eTest Tests taken :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvNumtesttaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAvgscore"
            android:layout_alignLeft="@+id/tvGenderOption"
            android:layout_alignStart="@+id/tvGenderOption"
            android:layout_alignTop="@+id/tvTesttaken"
            android:text="21"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvAvgscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvTesttaken"
            android:layout_alignStart="@+id/tvTesttaken"
            android:layout_below="@+id/tvTesttaken"
            android:layout_marginTop="10dp"
            android:text="etest Average Score :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvAvgscorenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNumtesttaken"
            android:layout_alignStart="@+id/tvNumtesttaken"
            android:layout_alignTop="@+id/tvAvgscore"
            android:text="17.74%"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvReferals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvAvgscore"
            android:layout_alignStart="@+id/tvAvgscore"
            android:layout_below="@+id/tvAvgscore"
            android:layout_marginTop="10dp"
            android:text="E - Coach Referals :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvNumberref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLastlogin"
            android:layout_alignLeft="@+id/tvAvgscorenumber"
            android:layout_alignStart="@+id/tvAvgscorenumber"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvLastlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvReferals"
            android:layout_alignStart="@+id/tvReferals"
            android:layout_below="@+id/tvReferals"
            android:layout_marginTop="10dp"
            android:text="E - Coach Last Login :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNumberref"
            android:layout_alignStart="@+id/tvNumberref"
            android:layout_alignTop="@+id/tvLastlogin"
            android:text="09/09/2014"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvSitelogins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvLastlogin"
            android:layout_alignStart="@+id/tvLastlogin"
            android:layout_below="@+id/tvLastlogin"
            android:layout_marginTop="10dp"
            android:text="E-Coach Site Logins :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvnumsitelogins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvlogout"
            android:layout_alignStart="@+id/tvlogout"
            android:layout_alignTop="@+id/tvSitelogins"
            android:text="145"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvSitelogins"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvCode"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvCode"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/helpbtn"
                android:text="Help"
                android:textColor="#000" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvCode"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvCode"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/helpbtn"
                android:text="Logout"
                android:textColor="#000" />

        </LinearLayout>


    </RelativeLayout>


</ScrollView>